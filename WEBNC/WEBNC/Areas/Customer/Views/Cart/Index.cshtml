@{
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" />
}

<!-- PAGE HEADER -->
<div class="container-fluid cart-page-header">
    <div class="container text-center py-4 py-md-5">
        <h1 class="cart-title mb-3">GIỎ HÀNG</h1>

        <ol class="breadcrumb cart-breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item">
                <a href="/Customer/Home" class="text-decoration-none">Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                Cart
            </li>
        </ol>
    </div>
</div>

<!-- CART PAGE -->
<div class="container-fluid py-4 py-md-5 cart-page">
    <div class="container">
        <div class="row g-4">

            <!-- TABLE GIỎ HÀNG -->
            <div class="col-lg-8">
                <div class="cart-table-wrapper shadow-sm bg-white rounded-4">
                    <div class="d-flex justify-content-between align-items-center px-3 px-md-4 py-3 border-bottom">
                        <h5 class="mb-0 fw-semibold">Sản phẩm trong giỏ</h5>
                        <span id="cart-count-label" class="text-muted small">0 sản phẩm</span>
                    </div>

                    <div class="table-responsive">
                        <table class="table mb-0 align-middle cart-table">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-center">Chọn</th>
                                    <th scope="col">Sản phẩm</th>
                                    <th scope="col">Loại</th>
                                    <th scope="col" class="text-end">Giá</th>
                                    <th scope="col" class="text-center">Số lượng</th>
                                    <th scope="col" class="text-end">Tổng</th>
                                    <th scope="col" class="text-center">Xóa</th>
                                </tr>
                            </thead>

                            <tbody id="cart-body">
                                <!-- JS sẽ render vào đây -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- CART TOTAL -->
            <div class="col-lg-4">
                <div class="cart-summary shadow-sm bg-white rounded-4">
                    <div class="p-4 pb-3 border-bottom">
                        <h5 class="mb-2 fw-semibold text-uppercase text-center">Chi tiết giỏ hàng</h5>
                        <p class="text-muted text-center small mb-0">
                            Kiểm tra lại sản phẩm và phí trước khi thanh toán.
                        </p>
                    </div>

                    <div class="p-4">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Thành tiền</span>
                            <span class="subtotal-value fw-semibold">0 ₫</span>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <span>Shipping</span>
                            <span class="shipping-value fw-semibold">0 ₫</span>
                        </div>

                        <hr class="my-3" />

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="fw-semibold fs-5">Tổng tiền</span>
                            <span class="total-value fw-bold fs-4 text-primary">0 ₫</span>
                        </div>

                        <a href="/Customer/Checkout/PaymentMethod"
                           class="btn btn-primary w-100 rounded-pill py-3 text-uppercase fw-semibold">
                            Thanh toán
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script src="~/js/cart.js"></script>
