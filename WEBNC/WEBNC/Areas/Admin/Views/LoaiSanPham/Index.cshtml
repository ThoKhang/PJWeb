@{
    ViewData["Title"] = "Quản lý loại sản phẩm";
}

@section Styles {
    <link rel="stylesheet"
          href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
}

<!-- HEADER CARD -->
<div class="admin-card p-3 mb-4 d-flex align-items-center justify-content-between flex-wrap gap-3">
    <div>
        <div class="crumb mb-1" style="font-size:12px;">
            Sản phẩm • Loại sản phẩm
        </div>
        <h2 class="mb-1" style="font-weight:700; font-size:24px;">
            Quản lý loại sản phẩm
        </h2>
        <div class="text-muted" style="font-size:13px;">
            Thêm mới, chỉnh sửa và xóa các loại sản phẩm trong hệ thống.
        </div>
    </div>

    <a class="btn btn-brand" href="/Admin/LoaiSanPham/Create">
        <i class="fa-solid fa-plus me-1"></i> Thêm loại sản phẩm
    </a>
</div>

<!-- BẢNG LOẠI SẢN PHẨM -->
<div class="admin-card p-2">
    <div class="table-wrap">
        <table id="tblLoaiSanPham"
               class="table-admin display nowrap"
               style="width:100%">
            <thead>
                <tr>
                    <th>Mã loại</th>
                    <th>Tên loại sản phẩm</th>
                    <th style="min-width:140px;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @* DataTables + initLoaiSanPhamTable sẽ fill dữ liệu *@
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/pages/loaisanpham.page.js"></script>
}
