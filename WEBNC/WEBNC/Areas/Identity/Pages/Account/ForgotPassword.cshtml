@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_Layout"; // Đảm bảo Layout được sử dụng
}


<div class="d-flex align-items-center justify-content-center" style="min-height: 85vh;">

    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-4">

        <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card-body">

                <h1 class="card-title text-center text-primary mb-4" style="font-weight: 700;">
                    @ViewData["Title"]
                </h1>

                <p class="text-center text-muted mb-4">
                    Vui lòng nhập email của bạn để nhận liên kết đặt lại mật khẩu.
                </p>

                <hr class="mb-4" />

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    Email
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Địa chỉ Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    Reset
                    <button type="submit" class="w-100 btn btn-lg btn-primary shadow-sm">
                        Đặt lại Mật khẩu
                    </button>
                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}