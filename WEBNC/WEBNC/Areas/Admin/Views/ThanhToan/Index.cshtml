@{
    ViewData["Title"] = "Quản lý thanh toán";
}

@section Styles {
    <link rel="stylesheet"
          href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
}

<!-- HEADER -->
<div class="admin-card p-3 mb-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
    <div>
        <div class="crumb mb-1" style="font-size:12px;">
            Thanh toán • Danh sách
        </div>
        <h2 class="mb-1" style="font-weight:700; font-size:24px;">
            Quản lý thanh toán
        </h2>
        <div class="text-muted" style="font-size:13px;">
            Theo dõi trạng thái thanh toán, số tiền và mã giao dịch.
        </div>
    </div>

    <div class="d-flex flex-wrap align-items-center gap-2">
        <button class="btn-mini" type="button" id="btnRefreshThanhToan">
            <i class="fa-solid fa-rotate me-1"></i> Làm mới
        </button>
    </div>
</div>

<!-- BẢNG THANH TOÁN -->
<div class="admin-card p-2">
    <div class="table-wrap">
        <table id="tblThanhToan" class="table-admin display nowrap w-100">
            <thead>
                <tr>
                    <th style="width:8%">Mã TT</th>
                    <th style="width:10%">Mã đơn</th>
                    <th style="width:12%">Phương thức</th>
                    <th style="width:12%">Số tiền</th>
                    <th style="width:10%">Trạng thái</th>
                    <th style="width:18%">Ngày thanh toán</th>
                    <th style="width:15%">Mã giao dịch</th>
                    <th style="width:15%">Thao tác</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- DataTables JS (bắt buộc) -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- SweetAlert2 (bạn đang dùng Swal) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Page JS -->
    <script src="~/js/pages/thanhtoan.page.js" asp-append-version="true"></script>
}
