@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Tùy chỉnh thêm để giao diện mượt mà hơn */
    .table thead {
        background-color: #f8f9fa;
    }

    .order-id {
        font-family: 'Courier New', Courier, monospace;
        letter-spacing: 1px;
    }

    .status-badge {
        padding: 0.5rem 0.75rem;
        border-radius: 50rem;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border-radius: 0.75rem;
    }

    .btn-action {
        border-radius: 0.5rem;
        transition: all 0.2s;
    }

        .btn-action:hover {
            transform: translateY(-2px);
        }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Tài khoản</li>
                </ol>
            </nav>
            <h2 class="fw-bold text-dark">Lịch sử đơn hàng</h2>
            <p class="text-muted">Chào mừng trở lại, <strong>@(User.Identity?.Name ?? "Khách hàng")</strong>!</p>
        </div>
        <div class="icon-box bg-primary-subtle p-3 rounded-circle text-primary">
            <i class="fas fa-shopping-bag fa-2x"></i>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div id="loadingSpinner" class="text-center py-5">
                <div class="spinner-grow text-primary" role="status"></div>
                <p class="mt-3 text-muted">Đang truy xuất dữ liệu đơn hàng...</p>
            </div>

            <div class="table-responsive" id="orderTableContainer" style="display:none;">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 border-0">MÃ ĐƠN</th>
                            <th class="py-3 border-0">NGÀY ĐẶT</th>
                            <th class="py-3 border-0 text-end">TỔNG TIỀN</th>
                            <th class="py-3 border-0 text-center">TRẠNG THÁI</th>
                            <th class="py-3 border-0 text-center pe-4">THAO TÁC</th>
                        </tr>
                    </thead>
                    <tbody id="tblDonHangBody" class="border-top-0">
                    </tbody>
                </table>
            </div>

            <div id="noDataMessage" class="text-center py-5" style="display:none;">
                <img src="https://cdn-icons-png.flaticon.com/512/4076/4076432.png" alt="Empty" style="width: 120px; opacity: 0.5;">
                <h4 class="mt-4 fw-bold">Chưa có đơn hàng nào</h4>
                <p class="text-muted">Có vẻ như bạn chưa thực hiện giao dịch nào.</p>
                <a href="/" class="btn btn-primary px-4 py-2 mt-2 shadow-sm">Mua sắm ngay</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            loadOrderHistory();
        });

        function loadOrderHistory() {
            fetch('/api/DonDatHang/get-my-orders')
                .then(response => {
                    if (response.status === 401) {
                        window.location.href = "/Identity/Account/Login";
                        return;
                    }
                    return response.json();
                })
                .then(res => {
                    document.getElementById('loadingSpinner').classList.add('d-none');
                    const data = res && res.data ? res.data : [];

                    if (data.length === 0) {
                        document.getElementById('noDataMessage').style.display = 'block';
                        document.getElementById('orderTableContainer').style.display = 'none';
                        return;
                    }

                    document.getElementById('orderTableContainer').style.display = 'block';
                    renderTable(data);
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('loadingSpinner').innerHTML =
                        '<div class="py-5 text-danger"><i class="fas fa-exclamation-circle fa-3x"></i><p class="mt-3">Không thể kết nối đến máy chủ.</p></div>';
                });
        }

        function renderTable(data) {
            let html = '';
            const formatter = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' });

            data.forEach(item => {
                // 1. Định dạng ngày
                let dateString = "---";
                if(item.ngayDat){
                    const dateObj = new Date(item.ngayDat);
                    dateString = `<div>${dateObj.toLocaleDateString('vi-VN')}</div>
                                  <small class="text-muted">${dateObj.toLocaleTimeString('vi-VN', {hour:'2-digit', minute:'2-digit'})}</small>`;
                }

                // 2. Định dạng Badge Trạng thái
                let statusText = item.trangThai || "Chờ xác nhận";
                let badgeStyle = "bg-secondary-subtle text-secondary border";

                if (statusText === 'Đã giao' || statusText === 'Hoàn thành') {
                    badgeStyle = "bg-success-subtle text-success border border-success";
                } else if (statusText.includes('Đang')) {
                    badgeStyle = "bg-info-subtle text-info border border-info";
                } else if (statusText === 'Chờ xác nhận') {
                    badgeStyle = "bg-warning-subtle text-warning border border-warning";
                } else if (statusText.includes('hủy')) {
                    badgeStyle = "bg-danger-subtle text-danger border border-danger";
                }

                // 3. Nút Thao tác
                let actionButtons = `
                    <div class="d-flex justify-content-center gap-2">
                        <a href="/Customer/DonDatHang/Details/${item.idDonDat}" class="btn btn-outline-primary btn-sm btn-action">
                            <i class="fas fa-eye me-1"></i> Chi tiết
                        </a>
                `;

                    actionButtons += `
                        <button onclick="cancelOrder('${item.idDonDat}')" class="btn btn-outline-danger btn-sm btn-action">
                            <i class="fas fa-trash-alt me-1"></i> Hủy
                        </button>
                    `;

                actionButtons += `</div>`;

                html += `
                    <tr>
                        <td class="ps-4"><span class="order-id fw-bold text-dark">#${item.idDonDat}</span></td>
                        <td>${dateString}</td>
                        <td class="text-end fw-bold text-danger">${formatter.format(item.tongTien)}</td>
                        <td class="text-center">
                            <span class="status-badge ${badgeStyle}">${statusText}</span>
                        </td>
                        <td class="pe-4">${actionButtons}</td>
                    </tr>
                `;
            });
            document.getElementById('tblDonHangBody').innerHTML = html;
        }

        function cancelOrder(id) {
            Swal.fire({
                title: 'Hủy đơn hàng này?',
                text: "Thao tác này sẽ không thể khôi phục lại!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Đồng ý hủy',
                cancelButtonText: 'Đóng'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/api/DonDatHang/cancel/${id}`, { method: 'POST' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire('Thành công', 'Đơn hàng đã được hủy.', 'success').then(() => loadOrderHistory());
                        } else {
                            Swal.fire('Thất bại', data.message || "Lỗi khi hủy đơn.", 'error');
                        }
                    });
                }
            })
        }
    </script>
}