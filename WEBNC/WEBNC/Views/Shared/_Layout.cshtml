<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WEBNC</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WEBNC.styles.css" asp-append-version="true" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <header >
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm border-bottom sticky-top">
            <div class="container-fluid px-4 py-2">
                <a class="navbar-brand fw-bold text-primary d-flex align-items-center" href="/">
                    <i class="fas fa-store me-2 fs-4"></i> WEBNC
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0 d-flex align-items-center gap-4">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-dark px-3 py-2 rounded-3 transition-bg"
                               asp-area="Customer" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-semibold text-dark px-3 py-2 rounded-3 transition-bg"
                               asp-area="Admin" asp-controller="SanPham" asp-action="Index">
                                <i class="fas fa-box-open me-1"></i> Sản phẩm
                            </a>
                        </li>
                    </ul>
                    <form class="d-flex align-items-center gap-2 mt-3 mt-lg-0 w-100 w-lg-auto" style="max-width: 500px;">
                        <select class="form-select form-select-sm rounded-pill border-primary" style="width: 120px;">
                            <option selected>Tất cả</option>
                            <option>Điện thoại</option>
                            <option>Laptop</option>
                        </select>
                        <input class="form-control form-control-sm rounded-pill flex-grow-1"
                               type="search" placeholder="Tìm kiếm..." aria-label="Search">
                        <button class="btn btn-primary btn-sm rounded-pill d-flex align-items-center justify-content-center"
                                type="submit" style="width: 40px; height: 36px;">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer style="background-color:#000; height:100px;">
        <div class="container">
            <a href="https://github.com/ThoKhang/PJWeb.git" style="color:white; text-align:center; line-height:100px; margin:0; text-decoration: none; display: block;">Git nhóm 5ae</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>


    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>

    <script src="~/js/home.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
