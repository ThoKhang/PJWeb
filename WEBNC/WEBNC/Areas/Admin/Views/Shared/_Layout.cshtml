@{
    var title = ViewData["Title"] as string ?? "Admin";
}
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>

<body class="admin-body">
    <!-- overlay mobile -->
    <div id="adminOverlay" class="admin-overlay"></div>

    <div class="admin-shell">
        <!-- SIDEBAR -->
        <aside id="adminSidebar" class="admin-sidebar">
            @await Html.PartialAsync("_AdminSidebar")
        </aside>

        <!-- MAIN -->
        <main id="adminMain" class="admin-main">
            <!-- TOPBAR -->
            <div class="admin-topbar">
                <div class="d-flex align-items-center gap-2">
                    <button id="btnSidebarToggle" class="btn btn-topicon" type="button" title="Mở/đóng menu">
                        <span class="icon">≡</span>
                    </button>

                    <div class="lh-sm">
                        <div class="fw-bold">@ViewData["Title"]</div>
                        <div class="crumb">
                            Admin / @ViewContext.RouteData.Values["controller"] / @ViewContext.RouteData.Values["action"]
                        </div>
                    </div>
                </div>

                <div class="d-flex align-items-center gap-2">
                    @if (TempData["ok"] != null)
                    {
                        <span class="pill pill-ok">@TempData["ok"]</span>
                    }
                    <a class="btn btn-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">Về Customer</a>
                </div>
            </div>

            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ĐÚNG PATH CỦA BẠN -->
    <script src="~/js/admin.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
