@* File: Areas/Customer/Views/YeuCauDoiTra/History.cshtml *@
@{
    ViewData["Title"] = "Lịch sử Đổi/Trả";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="text-danger border-bottom pb-3">
                <i class="fas fa-sync-alt"></i> Lịch sử Đổi/Trả Hàng
            </h2>
        </div>
    </div>

    <div id="loadingSpinner" class="text-center my-5">
        <div class="spinner-border text-danger" role="status">
            <span class="visually-hidden">Đang tải...</span>
        </div>
        <p class="mt-2 text-muted">Đang lấy dữ liệu yêu cầu...</p>
    </div>

    <div class="table-responsive mt-4" id="requestTableContainer" style="display:none;">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-danger">
                <tr>
                    <th scope="col">Mã Đơn</th>
                    <th scope="col">Ngày Gửi</th>
                    <th scope="col" style="width: 40%;">Lý Do</th>
                    <th scope="col" class="text-center">Trạng Thái</th>
                </tr>
            </thead>
            <tbody id="tblYeuCauBody">
            </tbody>
        </table>
    </div>

    <div id="noDataMessage" class="alert alert-light border mt-4 text-center" style="display:none;">
        <i class="fas fa-clipboard-list fa-2x text-muted mb-2"></i>
        <p>Bạn chưa gửi yêu cầu đổi trả nào.</p>
        <a href="/Order/History" class="btn btn-outline-primary btn-sm">Xem lịch sử đơn hàng</a>
    </div>
</div>

@section Scripts {
    <script type="module">
        import { initHistoryPage } from "/js/ui/doitra/renderDoiTra.js";

        // Gọi hàm khởi tạo khi trang load xong
        document.addEventListener("DOMContentLoaded", function () {
            initHistoryPage();
        });
    </script>
}