@{
    var controller = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "");
    string Active(string c) => string.Equals(controller, c, StringComparison.OrdinalIgnoreCase) ? "active" : "";
}

<div class="sb-head">
    <div class="sb-brand">
        <div class="sb-logo">A</div>
        <div class="sb-title">
            <b>ADMIN PANEL</b>
            <span>Quản trị hệ thống</span>
        </div>
    </div>

    <button id="btnSidebarClose" class="sb-close" type="button" title="Đóng menu">✕</button>
</div>

<div class="sb-menu">
    <a class="sb-link @Active("Dashboard")"
       asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
        <div class="sb-ico">🏠</div>
        <div class="sb-meta">
            <b>Dashboard</b>
            <span>Tổng quan hệ thống</span>
        </div>
    </a>

    <a class="sb-link @Active("SanPham")"
       asp-area="Admin" asp-controller="SanPham" asp-action="Index">
        <div class="sb-ico">📦</div>
        <div class="sb-meta">
            <b>Sản phẩm</b>
            <span>Thêm / sửa / xóa</span>
        </div>
    </a>
</div>
