@{
    ViewData["Title"] = "Loại sản phẩm";
    var id = Context.Request.RouteValues["id"];
}

<div class="admin-card p-4">
    <h3 class="mb-3 fw-bold">
        @(id == null ? "Thêm loại sản phẩm" : "Chỉnh sửa loại sản phẩm")
    </h3>

    <form id="frmLoaiSanPham">
        <input type="hidden" id="idLoaiSanPham" value="@id" />

        <div class="mb-3">
            <label class="form-label fw-semibold">Tên loại sản phẩm</label>
            <input type="text"
                   class="form-control"
                   id="tenLoaiSanPham"
                   placeholder="Nhập tên loại sản phẩm"
                   required />
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-brand">
                <i class="fa-solid fa-save me-1"></i>
                Lưu
            </button>

            <a href="/Admin/LoaiSanPham"
               class="btn btn-secondary">
                Quay lại
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script type="module" src="~/js/pages/loaisanpham.upsert.js"></script>
}
