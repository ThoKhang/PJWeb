@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}
<div class="container-fluid forgot-password-container min-vh-100 d-flex align-items-center justify-content-center py-4">
    <div class="card forgot-password-card shadow-lg border-0" style="max-width: 480px; width: 100%;">
        <div class="card-body p-5">
            <h1 class="text-center mb-2 fw-bold text-primary">@ViewData["Title"]</h1>
            <p class="text-center text-muted mb-4">
                Nhập địa chỉ email của bạn để đặt lại mật khẩu
            </p>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

            <form method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email"
                           class="form-control form-control-lg"
                           autocomplete="username"
                           aria-required="true"
                           placeholder="name@example.com" />
                    <label asp-for="Input.Email">Địa chỉ Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg fw-semibold shadow-sm">
                        Gửi link đặt lại mật khẩu
                    </button>
                </div>
            </form>

            <div class="text-center mt-4">
                <a asp-page="./Login" class="text-decoration-none">
                    ← Quay lại đăng nhập
                </a>
            </div>
        </div>

        <div class="card-footer bg-light border-top text-center py-4">
            <small class="text-muted">
                &copy; @DateTime.Now.Year - Nhóm 5ae
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}