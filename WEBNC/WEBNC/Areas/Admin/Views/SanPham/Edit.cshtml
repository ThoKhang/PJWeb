@model WEBNC.Models.SanPham
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sửa sản phẩm";
}

<div class="card p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <div class="fw-bold fs-4">Sửa sản phẩm</div>
            <div class="text-muted">Mã: <span class="fw-semibold">@Model.idSanPham</span></div>
        </div>
        <a class="btn btn-outline-secondary rounded-4"
           asp-area="Admin" asp-controller="SanPham" asp-action="Index">Quay lại</a>
    </div>

    <form asp-area="Admin" asp-controller="SanPham" asp-action="Edit" asp-route-id="@Model.idSanPham" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="idSanPham" />

        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Mã sản phẩm</label>
                <input class="form-control rounded-4" value="@Model.idSanPham" disabled />
            </div>

            <div class="col-md-4">
                <label class="form-label">Công ty</label>
                <select asp-for="idCongTy" asp-items="ViewBag.CongTy" class="form-select rounded-4"></select>
            </div>

            <div class="col-md-4">
                <label class="form-label">Loại sản phẩm</label>
                <select asp-for="idLoaiSanPham" asp-items="ViewBag.LoaiSanPham" class="form-select rounded-4"></select>
            </div>

            <div class="col-12">
                <label class="form-label">Tên sản phẩm</label>
                <input asp-for="tenSanPham" class="form-control rounded-4" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Ảnh đại diện (imageURL)</label>
                <input asp-for="imageURL" class="form-control rounded-4" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Giá</label>
                <input asp-for="gia" class="form-control rounded-4" type="number" min="0" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Số lượng hiện còn</label>
                <input asp-for="soLuongHienCon" class="form-control rounded-4" type="number" min="0" />
            </div>

            <div class="col-md-6">
                <label class="form-label">Số lượng cảnh báo (cận dưới)</label>
                <input asp-for="soLuongCanDuoi" class="form-control rounded-4" type="number" min="0" />
            </div>

            <div class="col-12">
                <label class="form-label">Mô tả</label>
                <textarea asp-for="moTa" class="form-control rounded-4" rows="4"></textarea>
            </div>

            <div class="col-12">
                <label class="form-label">Thông số sản phẩm</label>
                <textarea asp-for="thongSoSanPham" class="form-control rounded-4" rows="4"></textarea>
            </div>

            <div class="col-12">
                <label class="form-label">Ảnh liên quan (JSON)</label>
                <textarea asp-for="imageLienQuan" class="form-control rounded-4" rows="3"></textarea>
            </div>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button class="btn btn-brand text-white rounded-4 px-4">Cập nhật</button>
            <a class="btn btn-light rounded-4 px-4"
               asp-area="Admin" asp-controller="SanPham" asp-action="Index">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
