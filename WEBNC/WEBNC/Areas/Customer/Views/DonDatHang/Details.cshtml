@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<input type="hidden" id="hiddenOrderId" value="@ViewBag.OrderId" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h2 class="text-primary m-0">
            <i class="fas fa-file-invoice me-2"></i> Chi Tiết Đơn Hàng <span id="lblOrderId" class="text-dark">#...</span>
        </h2>
        <div>
            <a href="/Customer/DonDatHang/Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Quay lại
            </a>
        </div>
    </div>

    <div id="loadingSpinner" class="text-center my-5 py-5">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
        <p class="mt-3 text-muted fs-5">Đang tải thông tin đơn hàng...</p>
    </div>

    <div id="orderContent" style="display:none; animation: fadeIn 0.5s;">

        <div class="card shadow-sm mb-4 border-0 bg-light">
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-md-6 border-end">
                        <h5 class="text-secondary mb-3"><i class="fas fa-info-circle me-1"></i> Thông tin đơn hàng</h5>
                        <p class="mb-2"><strong>Ngày đặt:</strong> <span id="lblNgayDat">...</span></p>
                        <p class="mb-2"><strong>Trạng thái:</strong> <span id="lblTrangThai" class="badge bg-secondary">...</span></p>
                        <p class="mb-0"><strong>Người nhận:</strong> (Chính chủ)</p>
                    </div>
                    <div class="col-md-6 ps-md-4">
                        <h5 class="text-secondary mb-3"><i class="fas fa-shipping-fast me-1"></i> Giao hàng tới</h5>
                        <p class="mb-2"><strong>Số điện thoại:</strong> <span id="lblSdt" class="fw-bold">...</span></p>
                        <p class="mb-2"><strong>Địa chỉ:</strong> <span id="lblDiaChi">...</span></p>
                        <p class="mb-0"><strong>Tổng thanh toán:</strong> <span id="lblTongTien" class="text-danger fw-bold fs-4">...</span></p>
                    </div>
                </div>
            </div>
        </div>

        <h4 class="mb-3 text-secondary"><i class="fas fa-box-open me-1"></i> Sản phẩm đã mua</h4>
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover table-bordered align-middle mb-0 bg-white">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="text-center py-3" style="width: 100px;">Hình ảnh</th>
                        <th class="py-3">Tên sản phẩm</th>
                        <th class="text-center py-3" style="width: 100px;">Số lượng</th>
                        <th class="text-center py-3" style="width: 150px;">Đơn giá</th>
                        <th class="text-center py-3" style="width: 150px;">Thành tiền</th>
                        <th class="text-center py-3" style="width: 150px;">Thực thi</th>
                    </tr>
                </thead>
                <tbody id="tblDetailsBody">
                </tbody>
            </table>
        </div>
    </div>

    <div id="errorAlert" class="alert alert-danger text-center mt-4 p-4 shadow-sm" style="display:none;">
        <i class="fas fa-exclamation-triangle fa-2x mb-2 d-block"></i>
        <span id="errorMessage">Có lỗi xảy ra.</span>
    </div>
</div>

@section Scripts {
    <script>
        let trangThai;
        document.addEventListener("DOMContentLoaded", function () {
            const orderId = document.getElementById('hiddenOrderId').value;

            if (orderId) {
                loadDetails(orderId);
            } else {
                showError("Không tìm thấy mã đơn hàng (ID trống).");
            }
        });

        function loadDetails(id) {
            // SỬA LẠI ĐƯỜNG DẪN API CHO ĐÚNG
            fetch(`/api/DonDatHang/details/${id}`)
                .then(response => {
                    if (response.status === 401) {
                        window.location.href = "/Identity/Account/Login"; // Chuyển trang login nếu chưa đăng nhập
                        throw new Error("Unauthorized");
                    }
                    if (!response.ok) {
                        throw new Error("Không thể tải dữ liệu đơn hàng.");
                    }
                    return response.json();
                })
                .then(data => {
                    document.getElementById('loadingSpinner').style.display = 'none';

                    if (!data.success) {
                        showError(data.message || "Không tìm thấy đơn hàng.");
                        return;
                    }

                    // Hiển thị nội dung
                    document.getElementById('orderContent').style.display = 'block';
                    fillInfo(data.orderInfo);
                    renderItems(data.orderDetails);
                })
                .catch(err => {
                    if (err.message !== "Unauthorized") {
                        console.error(err);
                        showError("Lỗi kết nối server hoặc đơn hàng không tồn tại.");
                    }
                });
        }

        function fillInfo(info) {
            const formatter = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' });

            // Xử lý ngày tháng an toàn
            let dateStr = "---";
            if(info.ngayDat) {
                const dateObj = new Date(info.ngayDat);
                dateStr = dateObj.toLocaleDateString('vi-VN') + ' ' + dateObj.toLocaleTimeString('vi-VN', {hour:'2-digit', minute:'2-digit'});
            }

            // Gán dữ liệu
            document.getElementById('lblOrderId').innerText = info.idDonDat; // Đã có chữ DH sẵn
            document.getElementById('lblNgayDat').innerText = dateStr;
            document.getElementById('lblSdt').innerText = info.sdt || "Chưa cập nhật";
            document.getElementById('lblDiaChi').innerText = info.diaChi || "Chưa cập nhật";
            document.getElementById('lblTongTien').innerText = formatter.format(info.tongTien || 0);

            // Xử lý màu sắc trạng thái
            const elStatus = document.getElementById('lblTrangThai');
            elStatus.innerText = info.trangThai;

            // Reset class
            elStatus.className = "badge rounded-pill px-3 py-2 ";

            if (info.trangThai === 'Đã giao' || info.trangThai === 'Hoàn thành')
            {
                elStatus.classList.add("bg-success");
                trangThai=info.trangThai;
            }
            else if (info.trangThai.includes('Đã hủy'))
                elStatus.classList.add("bg-danger");
            else
                elStatus.classList.add("bg-warning", "text-dark");
        }

        function renderItems(items) {
            let html = '';
            const formatter = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' });

            if (!items || items.length === 0) {
                document.getElementById('tblDetailsBody').innerHTML = '<tr><td colspan="5" class="text-center py-4">Không có sản phẩm nào.</td></tr>';
                return;
            }

            items.forEach(item => {
                // Xử lý ảnh: nếu null thì dùng ảnh mặc định
                let imgPath = item.hinhAnh ? `/images/${item.hinhAnh}` : '/images/no-image.png';
                if (trangThai === 'Đã giao' || trangThai === 'Hoàn thành'){
                    let idSanPham = item.idSanPham;
                    html += `
                        <tr>
                            <td class="text-center">
                                <img src="${imgPath}" class="rounded border shadow-sm" style="width: 70px; height: 70px; object-fit: cover;"
                                     onerror="this.src='https://via.placeholder.com/70?text=No+Img'">
                            </td>
                            <td>
                                <div class="fw-bold text-dark">${item.tenSanPham}</div>
                                </td>
                            <td class="text-center fw-bold text-secondary">${item.soLuong}</td>
                            <td class="text-center text-muted">${formatter.format(item.donGia)}</td>
                            <td class="text-center fw-bold text-primary">${formatter.format(item.thanhTien)}</td>
                            <td class="text-center fw-bold text-primary"><a href="/customer/DanhGia/Index?idSanPham=${idSanPham}" class="btn-binhLuan btn btn-primary">Bình luận</a></td>
                        </tr>
                    `;
                }
                else{
                    html += `
                        <tr>
                            <td class="text-center">
                                <img src="${imgPath}" class="rounded border shadow-sm" style="width: 70px; height: 70px; object-fit: cover;"
                                     onerror="this.src='https://via.placeholder.com/70?text=No+Img'">
                            </td>
                            <td>
                                <div class="fw-bold text-dark">${item.tenSanPham}</div>
                                </td>
                            <td class="text-center fw-bold text-secondary">${item.soLuong}</td>
                            <td class="text-end text-muted">${formatter.format(item.donGia)}</td>
                            <td class="text-end fw-bold text-primary">${formatter.format(item.thanhTien)}</td>
                        </tr>
                    `;
                }
            });
            document.getElementById('tblDetailsBody').innerHTML = html;
        }

        function showError(msg) {
            document.getElementById('loadingSpinner').style.display = 'none';
            document.getElementById('orderContent').style.display = 'none';

            const alertBox = document.getElementById('errorAlert');
            const msgBox = document.getElementById('errorMessage');

            alertBox.style.display = 'block';
            msgBox.innerText = msg;
        }
    </script>

