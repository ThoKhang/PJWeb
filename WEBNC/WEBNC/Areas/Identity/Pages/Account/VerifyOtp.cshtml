@page
@model VerifyOtpModel
@{
    ViewData["Title"] = "Xác thực OTP";
}

<div class="row justify-content-center my-5">
    <div class="col-lg-5 col-md-7 col-sm-9">

        <div class="card shadow border-0 otp-card">
            <div class="card-body p-4 p-md-5">

                <!-- Icon -->
                <div class="text-center mb-4">
                    <div class="otp-icon mx-auto">
                        <i class="bi bi-shield-lock-fill"></i>
                    </div>
                </div>

                <!-- Title -->
                <h4 class="text-center fw-bold mb-2">Xác thực OTP</h4>
                <p class="text-center text-muted mb-4">
                    Nhập mã OTP 6 số đã được gửi về email của bạn
                </p>

                <!-- Error -->
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger text-center py-2">
                        @Model.ErrorMessage
                    </div>
                }

                <!-- Form -->
                <form method="post">
                    <div class="mb-4">
                        <input asp-for="OtpInput"
                               class="form-control otp-input"
                               placeholder="••••••"
                               maxlength="6"
                               autocomplete="one-time-code" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">
                        Xác thực
                    </button>
                </form>

                <div class="text-center mt-4">
                    <small class="text-muted">Không nhận được mã?</small>

                    <form method="post" asp-page-handler="Resend" class="d-inline">
                        <button type="submit"
                                class="btn btn-link p-0 fw-semibold text-primary text-decoration-none">
                            Gửi lại OTP
                        </button>
                    </form>
                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <style>
        /* Card */
        .otp-card {
            border-radius: 16px;
        }

        /* Icon */
        .otp-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(13,110,253,0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #0d6efd;
            font-size: 36px;
        }

        /* OTP input */
        .otp-input {
            text-align: center;
            font-size: 1.75rem;
            font-weight: 700;
            letter-spacing: 10px;
            padding: 12px;
        }

            .otp-input::placeholder {
                letter-spacing: 10px;
            }
    </style>
}
